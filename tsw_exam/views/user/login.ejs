<!DOCTYPE html>
<html>
  <head>
    <title>User login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/bootstrap.css" />
    <script src="/jquery.js" ></script>
    <script src="/bootstrap.js" ></script>
  </head>
  
  <body>
    <% include ../templates/guest_header.ejs %>
    <div class="container content">
        <div class="col-lg-6 col-lg-push-3 col-md-8 col-md-push-2 col-sm-12">
            <div class="panel panel-default">
                <div class="panel panel-heading text-center zindex50">
                    <h1>Formularz Logowania</h1>
                </div>
                <div class="panel panel-body">
                    <form class="form-horizontal" role="form" action="/users/login" method="post">
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="username">Login:</label>
                          <div class="col-sm-10">
                            <input name="username" type="text" class="form-control" id="username" placeholder="Podaj login">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="password">Hasło:</label>
                          <div class="col-sm-10">          
                            <input name="password" type="password" class="form-control" id="password" placeholder="Podaj hasło">
                          </div>
                        </div>
                        <hr />
                        <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default pull-right">Zaloguj</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% include ../templates/footer.ejs %>
  </body>
</html>

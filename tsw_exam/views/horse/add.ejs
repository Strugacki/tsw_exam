<div id="content-panel" class="col-lg-6 col-lg-push-3 col-md-8 col-md-push-2 col-sm-12">
    <div class="panel panel-default">
        <div class="panel panel-heading text-center">
            <h1>Formularz dodawania Konia</h1>
        </div>
        <div class="panel panel-body">
            <form class="form-horizontal" role="form" action="/horse/add" method="post">
           <div class="form-group">
              <label class="control-label col-sm-2" for="horseName">Imię:</label>
              <div class="col-sm-10">
                <input name="horseName" type="text" class="form-control" id="horseName" placeholder="Podaj imię">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="sex">Płeć:</label>
              <div class="col-sm-10">
                <select name="sex" class="form-control" id="sex" >
                    <option selected value="null">-- Wybierz --</option>
                    <option value="stallion">Ogier</option>
                    <option value="mare">Klacz</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="birthDate">Data urodzenia:</label>
              <div class="col-sm-10">
                <div id="checkBirthDateDiv" class="input-group has-warning">
                    <input name="birthDate" type="text" class="form-control" id="birthDate" placeholder="dd-mm-yyyy" aria-describedBy="checkBirthDate">
                    <div class="input-group-addon" id="checkBirthDate"><span class="glyphicon glyphicon-warning-sign"></span></div>
                </div>
                </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="ownerFirstName">Imię właściciela:</label>
              <div class="col-sm-10">
                <input name="ownerFirstName" type="text" class="form-control" id="ownerFirstName" placeholder="Podaj imię">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="ownerLastName">Nazwisko właściciela:</label>
              <div class="col-sm-10">
                <input name="ownerLastName" type="text" class="form-control" id="ownerLastName" placeholder="Podaj nazwisko">
              </div>
            </div>
            <hr />
            <div class="form-group">        
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default pull-right" disabled>Dodaj</button>
              </div>
            </div>
        </form>
        </div>
    </div>
</div>

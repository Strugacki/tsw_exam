
<div id="content-panel" class="col-lg-12 col-md-12 col-sm-12">
    <div class="panel panel-default">
        <div class="panel panel-heading text-center">
            <h1>Lista Sędziów</h1>
            <a id="refereeAdd" href="/referee/add" class="btn btn-success">Dodaj</a>
        </div>
        <div class="panel panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Dane personalne</th>
                <th>Login</th>
                <th>Email</th>
                <th>Stan konta</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
             <% for(var i=0; i < data.length; i++){ %>
              <tr>
                <td><%= data[i].firstName %> <%= data[i].lastName %></td>
                <td><%= data[i].username %></td>
                <td><%= data[i].email %></td>
                <% if(data[i].isActive){ %>
                 <td>Aktywne</td>
                <% }else{ %>
                 <td>Nieaktywne</td>
                <% } %>
                <td><a id="refereeEdit" href="/referee/edit/<%= data[i]._id %>" class="btn btn-primary">Edytuj</a>
                <% if(data[i].isActive){ %>
                 <a id="refereeActivator" href="/referee/activator/<%= data[i]._id %>" id="deactivate" class="btn btn-warning">Dezaktywuj</a>
                <% }else{ %>
                 <a id="refereeActivator" href="/referee/activator/<%= data[i]._id %>" id="activate" class="btn btn-success">Aktywuj</a>
                <% } %>
                </td>
              </tr>
             <% } %>
            </tbody>
          </table>
        </div>
    </div>
</div>